<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:backgroundTint="@android:color/white"
    app:cardElevation="4dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/districtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_location_black"
            android:drawablePadding="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/districtConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_alert_black"
            android:drawablePadding="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/districtActive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_megaphone_black"
            android:drawablePadding="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/districtRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_heart_black"
            android:drawablePadding="4dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/districtDeceased"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_papyrus_black"
            android:drawablePadding="4dp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>