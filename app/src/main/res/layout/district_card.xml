<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="?attr/materialCardViewElevatedStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/district_location"
            style="@style/DrawableTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            tools:text="Bagalkote" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/district_confirmed"
            style="@style/DrawableTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_warning"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            tools:text="Confirmed: 97504" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/district_active"
            style="@style/DrawableTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_active"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            tools:text="Active: 97504" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/district_recovered"
            style="@style/DrawableTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_recovered"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            tools:text="Recovered: 97504" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/district_deceased"
            style="@style/DrawableTextViewStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:drawableStart="@drawable/ic_deceased"
            android:drawablePadding="4dp"
            android:gravity="center"
            android:textAppearance="?attr/textAppearanceTitleSmall"
            tools:text="Deceased: 97504" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>